{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "jsx": "react",
        "checkJs": true,
        "lib": ["esnext", "dom"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "allowUmdGlobalAccess": false,
        "typeAcquisition": {
            "enable": true,
            "disableFilenameBasedTypeAcquisition": true
        }
    },
    "include": ["src/**/*"]
}
